<div>
  <h2>Spot Details</h2>
  <div>
    <div class="card card-body">

      <h4>name: {{name}}</h4>
      <img src="{{imageUrl}}" class="card-img-top" alt="{{name}}">
      <p>location: {{location}}</p>
      <p>category: {{category}}</p>
      <p>description: {{description}}</p>

      {{!-- see comments --}}
      {{#each comments}}
      <div class="card card-body">
        <p>author: {{this.author.username}}</p>
        <p>content: {{this.content}}</p>
      </div>
      <hr>
      {{/each}}



      {{!-- add favourites --}}
      <h3>Add to your favourites</h3>
      <form action="/user-profile/spot-details/{{_id}}/fav" method="post">
        <button type="submit" class="btn btn-danger">Like</button>
      </form>

      {{!-- add comment form --}}
      <h3>Add comment</h3>
      <form action="/spot-details/{{_id}}/comment" method="POST">
        <textarea name="content" id="comment-content-input" cols="30" rows="2"></textarea>
        <button type="submit">Comment</button>
      </form>


      {{!-- <p><a href="/user-profile/user-spots/{{this.id}}" class="btn btn-primary">Back</a> ||<a --}}
      {{!-- href="/user-profile/user-spots/{{this.id}}/edit" class="btn btn-primary">Edit</a></p> --}}


    </div>
    <hr>
  </div>
</div>