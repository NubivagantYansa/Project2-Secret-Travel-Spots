<div class="view text-center p-3 p-md-5 m-md-3">
  <div id="error-message"></div>
  <br>
  <h2>Create a new spot</h2>
  <br>
  <form class="form-signin mx-auto" id="create-spot" action="/user-profile/create-spot" method="post"
    enctype="multipart/form-data">
    <div>
      <h6>Name of the spot*</h6>
      <input type="text" name="name" id="name-input" class=" card form-control"
        placeholder="Add here the name of the spot" />
    </div>
    <br>
    <div>
      <h6>Description*</h6>
      <textarea name="description" id="description-input" cols="30" rows="5" class="card form-control"
        placeholder="Add here a brief description of the spot"></textarea>
    </div>
    <br>
    <div>
      {{!-- <label for="address-input">Location:</label>
    <input type="text" name="address" id="address-input" class="form-control"
      placeholder="Type an address <Street, City, (CAP), Country> or click the <Use My Location> button" />
    <button id="get-location" class="btn btn-primary">Use My Location</button> --}}
      <h6>Address*</h6>

      <div id="map" style="width: 100%; height: 500px; border-radius: 5px"></div>
    </div>
    <br>
    <div>
      <h6>Category*</h6>
      <div class="test-center filter-div">
        <select class="card" id="category-input" name="category">
          <option value="Beach">Beach</option>
          <option value="For sunrise">For sunrise</option>
          <option value="For sunset">For sunset</option>
          <option value="To bike">To bike</option>
          <option value="To eat">To eat</option>
          <option value="To hike">To hike</option>
          <option value="To hike">To relax</option>
          <option value="To walk">To walk</option>
          <option value="To visit">To visit</option>
        </select>
      </div>
      <div class="text-center choose-file">
        <h6>Image</h6>
        <div class="card-body choose-file">
          <input type="file" name="image" id="image-input" class="card choose-file-input" />
        </div>
      </div>
    </div>
    <div class="btns-create">
      <button type="submit" class="btn btn-primary">Submit</button>
      <a href="/user-profile" class="btn btn-secondary">Back</a>
      <br>
    </div>

  </form>
  <br>
</div>